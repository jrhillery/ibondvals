  	<delete dir="${build}/com"/>
    <move file="ibondvalues.mxt" todir="${dist}"/>
<!--    <move file="s-ibondvalues.mxt" tofile="${dist}/ibondvalues.mxt"/>-->
  </target>

  <target name="genkeys">
    <java 
      inputstring="ibondvalues's passphrase"
      classpathref="classpath"
      classname="com.moneydance.admin.KeyAdmin">
      <arg value="genkey"/>
      <arg value="${privkeyfile}"/>
      <arg value="${pubkeyfile}"/>
    </java>
  </target>

  <target name="all" depends="ibondvalues"/>

</project>
